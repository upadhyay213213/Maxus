<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_rectangle"
    android:fillViewport="true"
   >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/app_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="MAXUS PLAN SOLUTIONS"
            android:textColor="@color/light_grey_back"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/close" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:paddingBottom="50dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:background="@drawable/map_image"
            />

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:id="@+id/textID"
                android:layout_marginLeft="5dp"
                android:text="ADDRESS:\n13850 Ballantyne Corporate Place Suite 500 Charlotte, NC 28277\n\n704,360,8055\ninfo@maxusplans.com  \nmaxusplans.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_toLeftOf="@id/textID"
                android:background="@drawable/building"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"

                android:layout_marginTop="60dp"


                />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
    </ScrollView>